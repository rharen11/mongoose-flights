<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<main>
    <h1><%= title %></h1>
    <form id="new-form" action="/flights" method="POST">
      <label for="airline-input">Airline:</label>
      <input type="text" name="airline" id="airline-input">
      <label for="flightNo-input">Flight Number:</label>
      <input type="text" name="flightNo" id="flightNo-input">
      <label for="airport">Airport:</label>
      <select name="aiport" id="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
      <label for="departs-input">Departure Time</label>
      <input type="text" name="departs" id="departs-input">
    </form>
  </main>

